# Bluebikes GBFS API
GBFS_BASE_URL=https://gbfs.lyft.com/gbfs/1.1/bos/en

# Backend Server
PORT=5001
NODE_ENV=development

# ========== ML Service Configuration ==========
# Option 1: Local ML Service (default)
# Set this to use the local Python ml-service.py
ML_SERVICE_PORT=5002
MODEL_PATH=./models/best_model.pkl

# Option 2: External Deployed ML API
# Set USE_EXTERNAL_ML_API=true to use a deployed model (AWS SageMaker, Azure ML, etc.)
USE_EXTERNAL_ML_API=false
# EXTERNAL_ML_API_URL=https://your-ml-api.example.com
# ML_API_KEY=your-api-key-here  # Optional: if your API requires authentication

# ========== Historical Data Service ==========
HISTORICAL_DATA_SERVICE_PORT=5003
HISTORICAL_DATA_PATH=../../data_pipeline/data/raw/bluebikes
